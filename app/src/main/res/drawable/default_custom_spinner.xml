<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:top="@dimen/form_spinner_height">
                <shape android:gravity="bottom" android:shape="line">
                    <stroke android:width="1dp" android:color="@android:color/darker_gray" />
                    <size android:height="2dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/icon_arrow_spinner" />
            </item>
        </layer-list>
    </item>
</selector>