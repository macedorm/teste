<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/list_item_horizontal_padding"
    android:paddingBottom="@dimen/list_item_horizontal_padding"
    android:paddingStart="@dimen/list_item_vertical_padding"
    android:paddingEnd="@dimen/list_item_vertical_padding"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/container_cliente_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/form_label_large_margin_vertical">


        <ImageView
            android:id="@+id/cliente_status_credito_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_people_black_24dp"
            android:paddingEnd="@dimen/list_item_image_end_padding" />

        <TextView
            android:id="@+id/cliente_nome_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/cliente_status_credito_image_view"
            style="@style/ListItemPrimaryText" />

        <TextView
            android:id="@+id/cliente_codigo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/list_item_spacing"
            android:layout_below="@id/cliente_nome_text_view"
            android:layout_toEndOf="@id/cliente_status_credito_image_view"
            style="@style/ListItemSecondaryText" />

        <TextView
            android:id="@+id/cliente_endereco1_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/list_item_spacing"
            android:layout_below="@id/cliente_codigo_text_view"
            android:layout_toEndOf="@id/cliente_status_credito_image_view"
            style="@style/ListItemSecondaryText" />

        <TextView
            android:id="@+id/cliente_endereco2_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/list_item_spacing"
            android:layout_below="@id/cliente_endereco1_text_view"
            android:layout_toEndOf="@id/cliente_status_credito_image_view"
            style="@style/ListItemSecondaryText" />

        <TextView
            android:id="@+id/plano_campo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/list_item_spacing"
            android:layout_below="@id/cliente_endereco2_text_view"
            android:layout_toEndOf="@id/cliente_status_credito_image_view"
            style="@style/ListItemSecondaryText" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/container_multiselection_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/container_cliente_relative_layout">

        <CheckBox
            android:id="@+id/selected_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>