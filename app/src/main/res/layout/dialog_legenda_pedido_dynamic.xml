<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundDialog"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dialog_margin"
            app:cardBackgroundColor="@color/backgroundColor"
            app:cardCornerRadius="@dimen/dialog_card_corner_radius"
            app:cardElevation="@dimen/dialog_card_elevation"
            app:cardUseCompatPadding="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dialog_content_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/FormValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/legendas"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:tint="@color/colorPrimary" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_suj" />

                        <TextView
                            style="@style/FormValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dialog_margin_left"
                            android:text="@string/pedido_status_sug" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_desk" />

                        <TextView
                            style="@style/FormValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dialog_margin_left"
                            android:text="@string/pedido_status_web" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_mob" />

                        <TextView
                            style="@style/FormValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dialog_margin_left"
                            android:text="@string/pedido_status_mobile" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_phone_in_talk_black_24dp" />

                        <TextView
                            style="@style/FormValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dialog_margin_left"
                            android:text="@string/pedido_status_cac"
                            android:textAlignment="center" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_edi_gray" />

                        <TextView
                            style="@style/FormValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dialog_margin_left"
                            android:text="@string/pedido_status_edi"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <View
                        android:id="@+id/relatorio_line_serie_cliente_text_view"
                        style="@style/LineDefault"
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/dialog_margin_top" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_legenda_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dialog_margin_bottom_end"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ok_button"
                            style="@style/DanButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/password_text_input_layout"
                            android:layout_marginBottom="@dimen/dialog_margin_bottom_end"
                            android:layout_marginLeft="@dimen/dialog_margin_left"
                            android:layout_marginRight="@dimen/dialog_margin_right"
                            android:layout_marginTop="@dimen/dialog_margin_top"
                            android:text="@string/ok" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>