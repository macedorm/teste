<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/list_item_horizontal_padding"
    android:paddingEnd="@dimen/list_item_vertical_padding"
    android:paddingTop="@dimen/list_item_horizontal_padding"
    tools:context="br.com.jjconsulting.mobile.dansales.LoginActivity">

    <View
        android:id="@+id/produto_status_view"
        android:layout_width="@dimen/produto_status_width"
        android:layout_height="@dimen/produto_status_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/produto_status_margin_right"
        android:background="@android:color/holo_red_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/produto_status_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nome_produto_text_view"
            style="@style/ListItemPrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/ListItemSecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal_item"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:text="@string/cod_simplificado"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_text_view"
                style="@style/ListItemSecondaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal_item"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:layout_weight="1"
                android:maxLines="1" />

            <TextView
                style="@style/ListItemSecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal_item"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:text="@string/SKU"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sku_produto_text_view"
                style="@style/ListItemSecondaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal_item"
                android:layout_marginTop="@dimen/produto_status_margin_right"
                android:layout_weight="1"
                android:maxLines="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_prod_peso_label_text_view"
                style="@style/ListItemSecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal_item"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:text="@string/weight_l"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_prod_peso_text_view"
                style="@style/ListItemSecondaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal_item"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:layout_weight="1"
                android:maxLines="1" />

            <TextView
                style="@style/ListItemSecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal_item"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:text="@string/vl"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valor_total_text_view"
                style="@style/ListItemSecondaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:layout_weight="1"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_group_dat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/ListItemSecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal_item"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:text="@string/lote"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_prod_lote_text_view"
                style="@style/ListItemSecondaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:layout_weight="1"
                android:maxLines="1" />

            <TextView
                style="@style/ListItemSecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal_item"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:text="@string/qtd_estoque"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_prod_estoque_text_view"
                style="@style/ListItemSecondaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:layout_weight="1"
                android:maxLines="1" />

        </LinearLayout>

       
        <LinearLayout
            android:id="@+id/view_group_sortimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_prod_sortimento_label_text_view"
                style="@style/ListItemSecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal_item"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:text="@string/sort"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_prod_sortimento_text_view"
                style="@style/ListItemSecondaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal_item"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:layout_weight="1"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/ListItemSecondaryText"
                android:id="@+id/title_quantidade_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/form_label_margin_horizontal_item"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:text="@string/qtd"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quantidade_text_view"
                style="@style/ListItemSecondaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_label_margin_vertical"
                android:layout_weight="1"
                android:maxLines="1" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>