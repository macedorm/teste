<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/list_item_horizontal_padding"
    android:paddingBottom="@dimen/list_item_horizontal_padding"
    android:paddingStart="@dimen/list_item_vertical_padding"
    android:paddingEnd="@dimen/list_item_vertical_padding"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/agenda_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@style/ListItemPrimaryText" />

    <TextView
        android:id="@+id/agenda_validade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/list_item_spacing"
        android:layout_below="@id/agenda_codigo"
        android:layout_alignParentStart="true"
        style="@style/ListItemSecondaryText" />

    <TextView
        android:id="@+id/agenda_edital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/list_item_spacing"
        android:layout_below="@id/agenda_validade"
        android:layout_alignParentStart="true"
        style="@style/ListItemSecondaryText" />

</RelativeLayout>