<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.jjconsulting.mobile.dansales.ClienteDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            style="@style/FormLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cliente_nome_hint" />

        <TextView
            android:id="@+id/cliente_nome_text_view"
            style="@style/FormValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/full_names" />

        <View
            style="@style/LineDefault"
            android:layout_width="match_parent" />

        <TextView
            style="@style/FormLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cliente_cnpj_hint" />

        <TextView
            android:id="@+id/cliente_cnpj_text_view"
            style="@style/FormValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/us_zipcodes" />

        <View
            style="@style/LineDefault"
            android:layout_width="match_parent" />

        <TextView
            style="@style/FormLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cliente_bandeira_hint" />

        <TextView
            android:id="@+id/cliente_bandeira_text_view"
            style="@style/FormValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/first_names" />

        <View
            style="@style/LineDefault"
            android:layout_width="match_parent" />

        <TextView
            style="@style/FormLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cliente_codigo_sap_hint" />

        <TextView
            android:id="@+id/cliente_codigo_sap_text_view"
            style="@style/FormValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/us_zipcodes" />

        <View
            style="@style/LineDefault"
            android:layout_width="match_parent" />

        <LinearLayout
            android:id="@+id/cliente_detail_endereco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/activity_vertical_margin">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                android:paddingEnd="@dimen/activity_vertical_margin">

                <TextView
                    style="@style/FormLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cliente_endereco_hint" />

                <TextView
                    android:id="@+id/cliente_endereco1_text_view"
                    style="@style/FormValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@tools:sample/cities" />

                <TextView
                    android:id="@+id/cliente_endereco2_text_view"
                    style="@style/FormValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@tools:sample/cities" />

                <TextView
                    android:id="@+id/cliente_endereco3_text_view"
                    style="@style/FormValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@tools:sample/cities" />

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_location_on_black_24dp"
                android:tint="@color/colorPrimary" />

        </LinearLayout>


        <TextView
            style="@style/FormLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cliente_condicao_pagamento_hint"
            android:visibility="gone" />

        <TextView
            android:id="@+id/cliente_condicao_pagamento_text_view"
            style="@style/FormValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            android:visibility="gone" />

        <View
            style="@style/LineDefault"
            android:layout_width="match_parent" />

        <LinearLayout
            android:id="@+id/cliente_status_credito_form_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/FormLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cliente_status_hint" />

            <TextView
                android:id="@+id/cliente_status_credito_text_view"
                style="@style/FormValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/first_names" />

            <View
                style="@style/LineDefault"
                android:layout_width="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cliente_data_ultimo_pedido_form_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/FormLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cliente_data_ultimo_pedido" />

            <TextView
                android:id="@+id/cliente_data_ultimo_pedido_text_view"
                style="@style/FormValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <View
                style="@style/LineDefault"
                android:layout_width="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/plano_campo_form_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/FormLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_plano_campo" />

            <TextView
                android:id="@+id/plano_campo_text_view"
                style="@style/FormValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <View
                style="@style/LineDefault"
                android:layout_width="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_detail_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/activity_vertical_margin">

                    <TextView
                        style="@style/FormLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cliente_layout_hint" />

                    <TextView
                        android:id="@+id/cliente_layout_text_view"
                        style="@style/FormValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_cr"/>

            </LinearLayout>

            <View
                style="@style/LineDefault"
                android:layout_width="match_parent" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>