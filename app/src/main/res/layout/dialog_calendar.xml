<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/backgroundColorTranspDialog">

    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_margin"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dialog_card_elevation"
        app:cardCornerRadius="@dimen/dialog_card_corner_radius"
        app:cardBackgroundColor="@color/backgroundColorDialog">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dialog_margin_top"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/before_month_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_margin_top"
                    android:textAlignment="center"
                    android:layout_marginVertical="@dimen/app_horizontal_spacing"
                    android:textSize="@dimen/dialog_text_size"
                    android:text="NOVEMBRO"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:lines="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/form_label_large_margin_vertical"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/current_month_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/app_horizontal_spacing"
                    android:textAlignment="center"
                    android:textSize="@dimen/dialog_text_size"
                    android:text="NOVEMBRO"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:lines="1" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/form_label_large_margin_vertical"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/after_month_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/app_horizontal_spacing"
                    android:textAlignment="center"
                    android:textSize="@dimen/dialog_text_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:lines="1"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>