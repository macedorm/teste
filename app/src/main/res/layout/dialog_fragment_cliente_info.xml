<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_default_margin"
        app:cardBackgroundColor="@color/backgroundColor"
        app:cardCornerRadius="@dimen/dialog_card_corner_radius"
        app:cardElevation="@dimen/dialog_card_elevation"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/container_answers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dialog_margin_left"
                        android:layout_marginRight="@dimen/dialog_margin_right"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ListItemPrimaryText"
                            android:id="@+id/title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dialog_margin"
                            android:text="@string/pesquisa_title_cliente_info"/>

                        <TextView
                            style="@style/ListItemPrimaryText"
                            android:id="@+id/cliente_nome_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dialog_margin"/>

                        <TextView
                            style="@style/ListItemSecondaryText"
                            android:id="@+id/cliente_address_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:id="@+id/container_resume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dialog_margin_left"
                            android:layout_marginRight="@dimen/dialog_margin_right"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                style="@style/ListItemSecondaryText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dialog_margin"
                                android:layout_marginBottom="@dimen/dialog_margin"
                                android:textStyle="bold"
                                android:text="@string/pesquisa_title_resumo_loja"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dialog_margin_left"
                                    android:layout_marginRight="@dimen/dialog_margin_left"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left">

                                        <TextView
                                            style="@style/ListItemSecondaryText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:gravity="center">

                                        <TextView
                                            style="@style/ListItemSecondaryText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12dp"
                                            android:text="@string/dialog_resume_cliente_nota"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:gravity="center">

                                        <TextView
                                            style="@style/ListItemSecondaryText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12dp"
                                            android:text="@string/dialog_resume_cliente_espaco"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dialog_margin_left"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left">

                                        <TextView
                                            style="@style/ListItemSecondaryText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/title_check_list"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:gravity="center">

                                        <TextView
                                            style="@style/ListItemSecondaryText"
                                            android:id="@+id/check_list_nota_text_view"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:gravity="center">

                                        <TextView
                                            style="@style/ListItemSecondaryText"
                                            android:id="@+id/check_list_espaco_text_view"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/formLineColor"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dialog_margin_left"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left">

                                        <TextView
                                            style="@style/ListItemSecondaryText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/title_inspetoria"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:gravity="center">

                                        <TextView
                                            style="@style/ListItemSecondaryText"
                                            android:id="@+id/inspetoria_nota_text_view"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:gravity="center">

                                        <TextView
                                            style="@style/ListItemSecondaryText"
                                            android:id="@+id/inspetoria_espaco_text_view"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/formLineColor"/>

                        </LinearLayout>

                        <TextView
                            style="@style/ListItemSecondaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dialog_margin"
                            android:textStyle="bold"
                            android:text="@string/pesquisa_title_layout_loja"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/form_label_margin_vertical"
                            android:gravity="center"
                            android:background="@drawable/background_resume_client">

                            <TextView
                                style="@style/ListItemSecondaryText"
                                android:id="@+id/layout_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/form_label_margin_vertical"
                                android:textSize="12dp"
                                android:background="?android:selectableItemBackground"
                                android:textAlignment="center"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/form_label_margin_vertical"
                        android:layout_marginTop="@dimen/form_label_margin_vertical"
                        android:layout_marginLeft="@dimen/form_label_margin_horizontal"
                        android:layout_marginRight="@dimen/form_label_margin_horizontal"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/cancel_button"
                            style="@style/DanButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/form_label_margin_horizontal"
                            android:layout_weight="1"
                            android:text="@string/cancel" />

                        <Button
                            android:id="@+id/ok_button"
                            style="@style/DanButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/form_label_margin_horizontal"
                            android:layout_weight="1"
                            android:text="@string/go" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
