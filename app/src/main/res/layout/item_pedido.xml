<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/list_item_horizontal_padding"
    android:paddingEnd="@dimen/list_item_vertical_padding"
    android:paddingStart="@dimen/list_item_vertical_padding"
    android:paddingTop="@dimen/list_item_horizontal_padding">

    <ImageView
        android:id="@+id/pedido_origem_status_image_view"
        android:layout_width="@dimen/pedido_icon_size"
        android:layout_height="@dimen/pedido_icon_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/list_item_image_end_padding"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/pedido_cliente_nome_text_view"
        style="@style/ListItemPrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/pedido_origem_status_image_view" />

    <TextView
        android:id="@+id/pedido_tipo_text_view"
        style="@style/ListItemSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pedido_cliente_nome_text_view"
        android:layout_toEndOf="@id/pedido_origem_status_image_view" />

    <TextView
        android:id="@+id/pedido_codigo_text_view"
        style="@style/ListItemSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pedido_tipo_text_view"
        android:layout_toEndOf="@id/pedido_origem_status_image_view" />


    <TextView
        android:id="@+id/pedido_codigo_sap_text_view"
        style="@style/ListItemSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pedido_codigo_text_view"
        android:layout_toEndOf="@id/pedido_origem_status_image_view" />

    <TextView
        android:id="@+id/pedido_data_cadastro_text_view"
        style="@style/ListItemSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pedido_codigo_sap_text_view"
        android:layout_toEndOf="@id/pedido_origem_status_image_view" />


    <TextView
        android:id="@+id/pedido_valor_total_text_view"
        style="@style/ListItemSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pedido_data_cadastro_text_view"
        android:layout_toEndOf="@id/pedido_origem_status_image_view" />

</RelativeLayout>