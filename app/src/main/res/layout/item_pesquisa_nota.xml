<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/header_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_label_margin_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/form_label_margin_vertical"
            android:layout_marginBottom="@dimen/form_label_margin_vertical"/>

        <TextView
            style="@style/ListItemPrimaryText"
            android:id="@+id/header_pilar_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container_pilar_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_bottom_dan_button"
        app:cardCornerRadius="@dimen/card_nota_corner_radius"
        app:cardBackgroundColor="@color/statusNotaCheckListOportunidade">

        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_nota_margin"
            android:layout_marginBottom="@dimen/card_nota_margin"
            android:layout_marginLeft="@dimen/card_nota_margin"
            android:layout_marginRight="@dimen/card_nota_status_margin"
            app:cardCornerRadius="@dimen/card_nota_corner_radius"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/backgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_pilar_imageView"
                    android:layout_marginLeft="@dimen/form_label_margin_vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/form_label_margin_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ListItemPrimaryText"
                        android:id="@+id/title_pilar_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/ListItemSecondaryText"
                        android:id="@+id/note_pilar_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        style="@style/ListItemSecondaryText"
                        android:id="@+id/obs_pilar_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/card_nota_obs"
                        android:text="@string/pesquisa_nota_obs"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>