<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_empty_text_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/form_label_margin_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/list_empty_image_button"
            style="@style/DanButtonCircle"
            android:layout_width="@dimen/size_circle_filter"
            android:layout_height="@dimen/size_circle_filter"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:tint="@color/statusNoFilter"
            android:src="@drawable/ic_filter" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_empty"
        android:textAlignment="center" />

</LinearLayout>
