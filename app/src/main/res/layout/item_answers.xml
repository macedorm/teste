<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/list_item_horizontal_padding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_label_margin_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/answers_title_text_view"
            style="@style/ListItemPrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/form_label_margin_vertical"/>

        <ImageView
            android:id="@+id/answers_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/form_label_margin_vertical"
            android:src="@drawable/button_oval"/>

        <TextView
            android:id="@+id/answers_sub_title_text_view"
            style="@style/ListItemPrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_label_margin_vertical"/>

        <TextView
            android:id="@+id/answers_title_description_text_view"
            style="@style/ListItemSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/form_label_margin_vertical"
            android:textAlignment="center"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/respostas_pergunta_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/respostas_pergunta_text_view"
            style="@style/ListItemSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_label_margin_vertical"
            android:layout_marginLeft="@dimen/form_label_margin_vertical"
            android:layout_marginRight="@dimen/form_label_margin_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/view_dialog_fragment_perguntas_linear_layout"
        android:layout_marginLeft="@dimen/form_label_margin_vertical"
        android:layout_marginRight="@dimen/form_label_margin_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/respostas_msg_error_text_view"
        style="@style/FormValueError"
        android:layout_marginLeft="@dimen/form_label_margin_vertical"
        android:layout_marginRight="@dimen/form_label_margin_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>