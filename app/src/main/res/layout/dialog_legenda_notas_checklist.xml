<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundDialog"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dialog_margin"
            app:cardBackgroundColor="@color/backgroundColor"
            app:cardCornerRadius="@dimen/dialog_card_corner_radius"
            app:cardElevation="@dimen/dialog_card_elevation"
            app:cardUseCompatPadding="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dialog_margin_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/FormValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/legendas"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:tint="@color/colorPrimary" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_bottom_dan_button"
                        android:layout_marginBottom="@dimen/margin_bottom_dan_button"
                        app:cardCornerRadius="@dimen/card_nota_corner_radius"
                        app:cardBackgroundColor="@color/statusNotaCheckListNRespondeu">

                        <androidx.cardview.widget.CardView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/card_nota_margin"
                            android:layout_marginBottom="@dimen/card_nota_margin"
                            android:layout_marginLeft="@dimen/card_nota_margin"
                            android:layout_marginRight="@dimen/card_nota_status_margin"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="@dimen/card_nota_corner_radius"
                            app:cardBackgroundColor="@color/backgroundColor">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/ListItemSecondaryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:layout_margin="@dimen/form_label_margin_vertical"
                                    android:text="@string/checklist_status_nota_n_respondeu" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_bottom_dan_button"
                        android:layout_marginBottom="@dimen/margin_bottom_dan_button"
                        app:cardCornerRadius="@dimen/card_nota_corner_radius"
                        app:cardBackgroundColor="@color/statusNotaCheckListNPontou">

                        <androidx.cardview.widget.CardView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/card_nota_margin"
                            android:layout_marginBottom="@dimen/card_nota_margin"
                            android:layout_marginLeft="@dimen/card_nota_margin"
                            android:layout_marginRight="@dimen/card_nota_status_margin"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="@dimen/card_nota_corner_radius"
                            app:cardBackgroundColor="@color/backgroundColor">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/ListItemSecondaryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:layout_margin="@dimen/form_label_margin_vertical"
                                    android:text="@string/checklist_status_nota_n_pontou" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_bottom_dan_button"
                        android:layout_marginBottom="@dimen/margin_bottom_dan_button"
                        app:cardCornerRadius="@dimen/card_nota_corner_radius"
                        app:cardBackgroundColor="@color/statusNotaCheckListPontou">

                        <androidx.cardview.widget.CardView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/card_nota_margin"
                            android:layout_marginBottom="@dimen/card_nota_margin"
                            android:layout_marginLeft="@dimen/card_nota_margin"
                            android:layout_marginRight="@dimen/card_nota_status_margin"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="@dimen/card_nota_corner_radius"
                            app:cardBackgroundColor="@color/backgroundColor">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/ListItemSecondaryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:layout_margin="@dimen/form_label_margin_vertical"
                                    android:text="@string/checklist_status_nota_pontou" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_bottom_dan_button"
                        android:layout_marginBottom="@dimen/margin_bottom_dan_button"
                        app:cardCornerRadius="@dimen/card_nota_corner_radius"
                        app:cardBackgroundColor="@color/statusNotaCheckListOportunidade">

                        <androidx.cardview.widget.CardView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/card_nota_margin"
                            android:layout_marginBottom="@dimen/card_nota_margin"
                            android:layout_marginLeft="@dimen/card_nota_margin"
                            android:layout_marginRight="@dimen/card_nota_status_margin"
                            app:cardCornerRadius="@dimen/card_nota_corner_radius"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/backgroundColor">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/ListItemSecondaryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:layout_margin="@dimen/form_label_margin_vertical"
                                    android:text="@string/checklist_status_oportunidade" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dialog_margin_bottom_end"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ok_button"
                            style="@style/DanButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/password_text_input_layout"
                            android:layout_marginBottom="@dimen/dialog_margin_bottom_end"
                            android:layout_marginLeft="@dimen/dialog_margin_left"
                            android:layout_marginRight="@dimen/dialog_margin_right"
                            android:layout_marginTop="@dimen/dialog_margin_top"
                            android:text="@string/ok" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>