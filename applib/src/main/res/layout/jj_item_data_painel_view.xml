<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/list_empty_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/form_label_margin_vertical"
        android:paddingEnd="@dimen/form_label_margin_horizontal"
        android:paddingStart="@dimen/form_label_margin_horizontal"
        android:paddingTop="@dimen/form_label_margin_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/menu_margin"
            android:text="Nenhum item encontrado"
            android:textColor="#000000"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


</RelativeLayout>
