<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <size android:height="30dp"/>
                    <gradient android:angle="360" android:endColor="@color/backgroundColor" android:startColor="@color/backgroundColor" />
                    <stroke android:width="1dp" android:color="@color/colorSpinnerBorder" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:right="@dimen/activity_vertical_margin"  >
                <bitmap android:gravity="center|right" android:src="@drawable/icon_arrow_spinner" />
            </item>
        </layer-list>
    </item>
</selector>