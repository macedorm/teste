<resources>

    <!-- Base application theme without action bar. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/appBackgroundColor</item>
        <item name="android:spinnerStyle">@style/spinnerStyle</item>
        <item name="colorControlNormal">#6E6D6D</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="android:textColorSecondary">@color/actionBarTextColor</item>
        <item name="colorControlNormal">@color/actionBarTextColor</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/actionBarTextColor</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/actionBarTextColor</item>
    </style>

    <style name="ActionBarTitleTextStyle" >
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ListItemMenu" parent="android:Widget.TextView">
        <item name="android:textColor">@color/menu_text</item>
        <item name="android:textSize">@dimen/list_item_menu</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style for TextView as a smaller text for listItem layouts. -->
    <style name="hintText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/listItemSecondaryTextColor</item>
        <item name="android:textSize">@dimen/hint_label_text_size</item>
    </style>


    <!-- Dialog Validation style. -->
    <style name="DialogValidationStyle">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- Dialog Validation style. -->
    <style name="DialogValidationStyleScreen">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <!-- Dialog style. -->
    <style name="DialogStyle">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>



    <style name="TextHintAppearence">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Base Spinner default -->
    <style name="spinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">@drawable/default_custom_spinner</item>
    </style>

    <!-- Style for buttons. -->
    <style name="DefaultButtonLogin" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/dan_button_login_default</item>
        <item name="android:textColor">@color/dan_button_login_text_color</item>
        <item name="android:textSize">@dimen/dan_button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style for buttons. -->
    <style name="DefaultButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/dan_button</item>
        <item name="android:textColor">@color/dan_button_text_color</item>
        <item name="android:textSize">@dimen/dan_button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style for buttons. -->
    <style name="DefaultButtonCircle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/dan_button_circle</item>
        <item name="android:textColor">@color/dan_button_text_color</item>
        <item name="android:textSize">@dimen/dan_button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style for TextView as a form label. -->
    <style name="FormLabel" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/form_label_text_size</item>
        <item name="android:paddingTop">@dimen/form_label_padding_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/formLabelTextColor</item>
        <item name="android:paddingBottom">@dimen/form_label_padding_bottom</item>
        <item name="android:paddingStart">@dimen/form_label_padding_vertical</item>
        <item name="android:paddingEnd">@dimen/form_label_padding_top</item>
    </style>

    <!-- Style for TextView as a form value (to no use disabled EditText). -->
    <style name="FormValue" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/form_value_text_size</item>
        <item name="android:textColor">@drawable/color_enable_disable</item>
        <item name="android:paddingTop">@dimen/form_value_padding_top</item>
        <item name="android:paddingBottom">@dimen/form_value_padding_bottom</item>
        <item name="android:paddingStart">@dimen/form_value_padding_vertical</item>
        <item name="android:paddingEnd">@dimen/form_value_padding_top</item>
        <item name="android:enabled">false</item>
    </style>

    <!-- Style for TextView as a form value (to no use disabled EditText). -->
    <style name="FormValueError" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/form_value_text_size</item>
        <item name="android:textColor">@color/errorCollor</item>
        <item name="android:paddingTop">@dimen/form_value_padding_top</item>
        <item name="android:paddingBottom">@dimen/form_value_padding_bottom</item>
        <item name="android:paddingStart">@dimen/form_value_padding_vertical</item>
        <item name="android:paddingEnd">@dimen/form_value_padding_top</item>
        <item name="android:enabled">false</item>
    </style>

    <!-- Style for TextView as a bigger text for list item layouts. -->
    <style name="ListItemPrimaryText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/listItemPrimaryTextColor</item>
        <item name="android:textSize">@dimen/list_item_primary_text_size</item>
    </style>

    <!-- Style for TextView as a smaller text for listItem layouts. -->
    <style name="ListItemSecondaryText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/listItemSecondaryTextColor</item>
        <item name="android:textSize">@dimen/list_item_secondary_text_size</item>
    </style>

    <!-- Style for TextView as a smaller label text for list item layouts. -->
    <style name="ListItemSecondaryTextLabel" parent="android:Widget.TextView">
        <item name="android:textColor">@color/listItemSecondaryTextLabelColor</item>
        <item name="android:textSize">@dimen/list_item_secondary_text_label_size</item>
    </style>

    <!-- Line style. -->
    <style name="LineDefault">
        <item name="android:background">@color/formLineColor</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="CustomTextInputLayoutAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/formLabelTextColor</item>
        <item name="colorControlNormal">@color/formLabelTextColorDisable</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:lines">1</item>
    </style>

    <style name="CustomTextInputEdiTextApparence" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/form_value_text_size</item>
        <item name="android:paddingBottom">@dimen/form_label_margin_vertical</item>
        <item name="android:textColor">@drawable/color_enable_disable</item>
    </style>

    <style name="LoginCustomTextInputLayoutAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/loginColorItens</item>
        <item name="colorControlNormal">@color/loginColorItens</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:lines">1</item>
    </style>

    <style name="LoginCustomTextInputEdiTextApparence" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/form_value_text_size</item>
        <item name="android:paddingBottom">@dimen/form_label_margin_vertical</item>
        <item name="android:textColor">@color/loginColorItens</item>
    </style>



    <!-- Splash screen theme. -->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Base PopMenu default -->
    <style name="popupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">-10dp</item>
        <item name="android:dropDownVerticalOffset">10dp</item>
    </style>

    <!-- Base Spinner default -->

    <!-- Base Spinner default -->
    <style name="spinnerFilterStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">@drawable/custom_spinner</item>
    </style>


    <!-- Login theme. -->
    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/loginColorPrimary</item>
        <item name="colorPrimaryDark">@color/loginColorPrimaryDark</item>
        <item name="colorAccent">@color/loginColorAccent</item>
        <item name="android:windowBackground">@color/loginBackgroundColor</item>
    </style>

    <!-- Style for buttons. -->
    <style name="DanButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/dan_button</item>
        <item name="android:textColor">@color/dan_button_text_color</item>
        <item name="android:textSize">@dimen/dan_button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DanButtonGray" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/dan_button_gray</item>
        <item name="android:textColor">@color/danButtonGrayPressedTextColor</item>
        <item name="android:textSize">@dimen/dan_button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Style for buttons. -->
    <style name="DanButtonCircle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/dan_button_circle</item>
        <item name="android:textColor">@color/dan_button_text_color</item>
        <item name="android:textSize">@dimen/dan_button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style for TextView as a smaller text for listItem layouts. -->
    <style name="ListItemBackgroundText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/listItemBackgroundTextColor</item>
        <item name="android:background">@color/listItemBackgroundColor</item>
        <item name="android:textSize">@dimen/list_item_secondary_text_size</item>

    </style>

    <!-- Style for TextView as a smaller label text for list item layouts. -->

    <!-- Default tab style. -->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/tabTextColor</item>
        <item name="tabSelectedTextColor">@color/tabSelectedTextColor</item>
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="tabIndicatorHeight">@dimen/size_tab_indicator_height</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="android:tabStripEnabled">true</item>
        <item name="tabPaddingStart">@dimen/tabLayoutVerticalPadding</item>
        <item name="tabPaddingEnd">@dimen/tabLayoutVerticalPadding</item>
    </style>

    <!-- Dialog product style. -->
    <style name="DialogProductStyle">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- Dialog product style. -->
    <style name="DialogMessageStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>



    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>


</resources>
